<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/background_image_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/city" />

    <tsekhmeistruk.whatistheweather.widgets.views.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background_image_drawer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-120dp"
        android:shadowColor="#062b68"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/what_is_the_weather"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        app:font="@string/font_montserrat_regular" />

</RelativeLayout>
